---
import UnrealEngineChip from "./chips/UnrealEngineChip.astro";
import BlenderChip from "./chips/BlenderChip.astro";
interface Props {
  title: string;
  img: string;
  parrafos?: string[];
}

const { title, img, parrafos = [] }: Props = Astro.props;

---

<div class="flex flex-col md:flex-row gap-4 p-2">
  <img class="rounded-xl md:w-1/2" src={img} alt={title} width="1280" height="720"/>
  <div class="flex flex-col gap-4">
    <h3 class="text-xl font-handwrite text-primary text-center">{title}</h3>
    {parrafos.map((parrafo) =>
      <p class="text-center" set:html={parrafo}>
      </p>
    )}
    <div class="flex flex-row gap-2 justify-center">
      <UnrealEngineChip />
      <BlenderChip />
    </div>
  </div>
</>
