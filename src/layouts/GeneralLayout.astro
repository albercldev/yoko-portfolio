---
import Icon from "../components/icons/Icon.tsx";
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Portfolio web de Paula LÃ³pez Giner (YokolateArt)" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-backgroundPrimary font-sans">
		<header class="bg-backgroundPrimary h-16">
			<nav class="h-full flex">
				<a href="/" class="font-handwrite text-primary flex flex-row flex-nowrap h-full p-2 items-center gap-2">
					<Icon icon="logo" width={32} height={32} className="text-primary fill-primary" />
					<h1 class="text-3xl h-fit">YokolateArt</h1>
				</a>
			</nav>
		</header>
		<main class="bg-backgroundSecondary">
			<slot />
		</main>
		<footer class="bg-backgroundPrimary min-h-12 flex flex-col align-middle">
			<div class="m-auto">
				<p class="text-center text-primary font-handwrite">YokolateArt 2024</p>
			</div>
		</footer>
	</body>
</html>
<style>
	@font-face {
		font-family: 'Salsa';
		src: url('/fonts/Salsa-Regular.ttf') format('truetype');
	}
</style>
